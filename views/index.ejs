			<div id="container-all">
				
			<h4>View by brands</h4>
				
			<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
				<% if(brand != '') { %>
					<% brand.forEach(function(brand, index) { %>
					<a href="/products/<%= brand.name %>/brand" class="col text-center category__link">
						<div class="category__img category__img--large shadow">
							<img src=<%- brand.imgSrc %>></img>
						</div>
						<div class="pt-1"><%- brand.name %></div>
					</a>
					<% }) %>
				<% } %>
	
			</div>
			<h4>View by categories</h4>
